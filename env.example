# Mediasoup SFU Server Environment Variables
# Copy this file to .env and configure your settings

# Server Configuration
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# Network Configuration (REQUIRED)
ANNOUNCED_IP=YOUR_PUBLIC_IP_HERE
ANNOUNCED_PORT=3000

# RTC Configuration
RTC_MIN_PORT=40000
RTC_MAX_PORT=49999

# Worker Configuration
WORKER_COUNT=auto
WORKER_LOG_LEVEL=warn

# Logging
LOG_LEVEL=info
LOG_FILE=/opt/mediasoup-sfu/logs/mediasoup.log

# Redis Configuration (optional - for clustering)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=3
REDIS_PASSWORD=

# SSL/TLS Configuration (optional)
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_PORT=3443

# Authentication
API_SECRET=your-api-secret-here-change-in-production
JWT_SECRET=your-jwt-secret-here

# Performance Tuning
MAX_CONCURRENT_ROOMS=100
MAX_PEERS_PER_ROOM=50
MAX_INCOMING_BITRATE=1500000
INITIAL_OUTGOING_BITRATE=1000000

# Mediasoup Specific Settings
MEDIASOUP_WORKER_LOG_TAGS=info,ice,dtls,rtp,srtp,rtcp
MEDIASOUP_ROUTER_MEDIA_CODECS=opus,vp8,vp9,h264

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Development Settings (set NODE_ENV=development to use)
DEV_RELOAD=true
DEV_DEBUG=false
